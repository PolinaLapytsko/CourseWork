extends layout

block content
  .container
      h1 Регистрация
      p Для входа в систему Вам необходимо зарегистрироваться
    .container
      form.form-horizontal(role='form', method='post', action='/adduser')
        .form-group
          label.col-sm-2.control-label(for='inputUserLogin') Логин
          .col-sm-10
            input#inputUserLogin.form-control(type='text', name='userlogin', placeholder='Логин')
        .form-group
          label.col-sm-2.control-label(for='inputUserPassword') Пароль
          .col-sm-10
            input#inputUserPassword.form-control(type='password', name='userpassword', placeholder='Пароль', value='')
        .form-group
          .col-sm-10.col-sm-offset-2
            input#submit.btn.btn-primary(name='submit', type='submit', value='ОК')
        .form-group
          .col-sm-10.col-sm-offset-2