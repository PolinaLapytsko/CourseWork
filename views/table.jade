extends newLayout

block content
    .container
        h1 Таблица смежности
        p Для построения кратчайшего пути в графе, Вам необходимо ввести таблицу смежности
    .container
        form.form-horizontal(role='form', method='post', action='/createTable')
            .form-group
                label.col-sm-2.control-label(for='inputNodesNumber') Количество вершин
                .col-sm-10
                    input#inputNodesNumber.form-control(type='text', name='nodesNumber', placeholder='Количество вершин')
            .form-group
                .col-sm-10.col-sm-offset-2
                    input#submit.btn.btn-primary(name='submit', type='submit', value='ОК')
            .form-group
                .col-sm-10.col-sm-offset-2
    .container
        table
            thead
                tr
                    th Таблица смежности
            tbody
                each task in tasks
                    tr
                        td=task.taskDescription