extends layout

block content
    .container
        h1 Обратная связь
        p Вы можете связаться с администратором, заполнив эту форму
    .container
        form.form-horizontal(role='form', method='post', action='/contact')
            .form-group
                label.col-sm-2.control-label(for='name') Ваше Имя
                .col-sm-10
                    input#name.form-control(type='text', name='name', placeholder='Ваше Имя', value='')
            .form-group
                label.col-sm-2.control-label(for='email') Ваш Email
                .col-sm-10
                    input#email.form-control(type='email', name='email', placeholder='example@domain.com', value='')
            .form-group
                label.col-sm-2.control-label(for='message') Сообщение
                .col-sm-10
                    textarea.form-control(rows='4', name='message')
            .form-group
                .col-sm-10.col-sm-offset-2
                    input#submit.btn.btn-primary(name='submit', type='submit', value='Send')
            .form-group
                .col-sm-10.col-sm-offset-2